#!/bin/bash

# Function to handle SIGTERM signal
# When SIGTERM is received, it prints "I am invincible!!!" and then returns,
# allowing the main loop to continue.
handle_sigterm() {
    echo "I am invincible!!!"
}

# Trap the SIGTERM signal (signal number 15) and call the handle_sigterm function
# when it is received.
trap 'handle_sigterm' SIGTERM

echo "Starting 7-highlander. PID: $$" # Print PID for easy identification

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
